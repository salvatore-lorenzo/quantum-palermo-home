  author = {Filatov, D. O. and Novikov, A. S. and Baranova, V. N. and Antonov, D. A. and Kruglov, A. V. and Antonov, I. N. and Zdoroveyshchev, A. V. and Koryazhkina, M. N. and Gorshkov, O. N. and Dubkov, A. A. and Carollo, Angelo and Spagnolo, B.},
